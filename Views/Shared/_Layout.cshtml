<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Book Rental Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Partial("_NavBar") @*this line of code adds the Partial View NavBar to the layout*@
    <div class="container body-content">
        @RenderBody() @*the content we send in our views are rendered in the body by this call*@
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Book Rental Application By Sibika</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
