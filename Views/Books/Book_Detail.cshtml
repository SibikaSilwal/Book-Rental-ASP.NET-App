@model Book_Rental.Models.Book
@{
    ViewBag.Title = "Book_Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li> Genre: @Model.Genre.GenreName</li>
    <li> Published Date: @Model.PublishedDate.ToLongDateString()</li>
    <li> Date Added: @Model.DateAdded.ToLongDateString()</li>
    <li> Number in Stock: @Model.NumberInStock</li>
</ul>

